  %h2#capabilities-heading Capabilities
  .block-wrapper
    .block
      %h3#design-heading Design
      %ul.list-unstyled{"aria-labelledby" => "design-heading", role: "list"}
        %li{role: "listitem"} Product Design
        %li{role: "listitem"} UI/UX Design
        %li{role: "listitem"} Wireframing
        %li{role: "listitem"} User research
        %li{role: "listitem"} Prototyping
        %li{role: "listitem"} Logos & Branding
        %li{role: "listitem"} Social Media, email, ads
        %li{role: "listitem"} Promotion & print

    .block
      %h3#dev-heading Development
      %ul.list-unstyled{"aria-labelledby" => "dev-heading", role: "list"}
        %li{role: "listitem"} HTML/CSS
        %li{role: "listitem"} Ruby on Rails
        %li{role: "listitem"} Middleman
        %li{role: "listitem"} Gatsby.js
        %li{role: "listitem"} ReactJS
        %li{role: "listitem"} JavaScript

